{
  "compilerOptions": {
    "composite": true, // Add composite flag for project references
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext", // Bundler から NodeNext に戻す
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    // "rootDir": "./src", // rootDir を削除
    "baseUrl": "./", // baseUrl を復活
    "paths": { // paths を復活
      "@/*": ["src/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "tests/**/*" // tests ディレクトリも include に追加
  ],
  "exclude": [
    "node_modules",
    "dist",
    // "**/*.test.ts" // テストファイルを除外しないようにコメントアウト
  ]
}

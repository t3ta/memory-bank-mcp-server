{
  "compilerOptions": {
    "composite": true, // Add composite flag for project references
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./", // Keep baseUrl
    "paths": {
      // Point alias back to the source directory for development/intellisense
      "@/*": ["src/*"],
      // Keep schema paths pointing to dist as they are pre-built
      "@memory-bank/schemas": ["../schemas/dist"],
      "@memory-bank/schemas/*": ["../schemas/dist/*"]
    },
    "isolatedModules": true // Added as per ts-jest recommendation
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "dist", "tests"]
}

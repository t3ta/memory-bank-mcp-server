{
  "name": "memory-bank-mcp-server",
  "version": "2.0.1",
  "description": "MCP server for managing project documentation and context across sessions",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "memory-bank-mcp-server": "./dist/index.js",
    "memory-bank": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "tsc && chmod +x dist/index.js && chmod +x dist/cli/index.js && npm run copy-templates",
    "clean": "rm -rf dist",
    "copy-templates": "mkdir -p dist/templates && cp -r src/templates/* dist/templates/",
    "start": "node dist/index.js",
    "dev": "NODE_OPTIONS='--experimental-specifier-resolution=node' ts-node --esm src/index.ts",
    "cli": "NODE_OPTIONS='--experimental-specifier-resolution=node' ts-node --esm src/cli/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest --config=jest.config.cjs --no-coverage --silent",
    "test:watch": "jest --config=jest.config.cjs --watch",
    "test:coverage": "jest --config=jest.config.cjs --coverage",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "keywords": [
    "mcp",
    "memory-bank",
    "documentation",
    "project-management",
    "claude",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.5.0",
    "uuid": "^11.1.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.8",
    "@types/yargs": "^17.0.32",
    "eslint": "^9.22.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "ts-prune": "^0.10.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.26.1"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t3ta/memory-bank-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/t3ta/memory-bank-mcp-server/issues"
  },
  "homepage": "https://github.com/t3ta/memory-bank-mcp-server#readme",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit",
      "jest --bail --findRelatedTests"
    ]
  }
}

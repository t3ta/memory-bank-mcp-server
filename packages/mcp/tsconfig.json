{
  "compilerOptions": {
    "composite": true, // Add composite flag for project references
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./", // Keep baseUrl
    "paths": {
      // "@/*": ["src/*"], // Temporarily comment out to isolate issues
      "@memory-bank/schemas": ["../schemas/src"] // Ensure this points to the source for TS server
    },
    "isolatedModules": true // Added as per ts-jest recommendation
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "dist", "tests"],
  "references": [
    { "path": "../schemas" } // Add reference to the schemas package
  ]
}
